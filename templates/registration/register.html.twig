{% extends 'registration/base.html.twig' %}
{% block title %}{{ parent() }}| Register{% endblock %}
{% block body %}
{{ include('admin/topnav.html.twig') }}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            {{ form_start(registrationForm) }}
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_row(registrationForm.first_name) }}  
                                      
                                    </div>
                                    <div class="col-sm-6">
                                         {{ form_row(registrationForm.last_name) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                   
                                        {{ form_row(registrationForm.email) }}
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                          {{ form_row(registrationForm.plainPassword, {label: 'Password' }) }}
                                    </div>
                                    <div class="col-sm-6">
                                          {{ form_row(registrationForm.agreeTerms) }}
                                    </div>
                                </div>
                               
                                   <a class="btn btn-success btn-sm">  <button type="submit" class="btn">Register</button> </a>
                                </a>
                                <hr>
                             {{ form_end(registrationForm) }}
                            <hr>
                            <div class="text-center">
                                <a class="small" href="{{path("reset_password")}}">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="{{path("app_login")}}">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
