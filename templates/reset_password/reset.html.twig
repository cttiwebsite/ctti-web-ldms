{% extends 'registration/base.html.twig' %}
{% block title %}{{ parent() }}| Reset Your Password{% endblock %}
{% block body %}
{{ include('admin/topnav.html.twig') }}
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Set New Password</h1>
                                    </div>
                                     {{ form_start(resetForm) }}
                                        <div class="form-group">
                                            {{ form_row(resetForm.plainPassword) }}
                                        </div>
                                        <a href="" class="btn btn-success btn-sm">
                                              <button class="btn btn-primary">Reset password</button>
                                        </a>
                                    {{ form_end(resetForm) }}
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="{{path('app_register')}}">Create an Account!</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="{{path('app_login')}}">Already have an account? Login!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
          </div>
        </div>
    </div>
{% endblock %}
