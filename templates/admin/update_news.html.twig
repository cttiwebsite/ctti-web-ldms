{% extends 'registration/base.html.twig' %}
 {% block body %}
 {{ include('admin/navigation.html.twig') }}
 <div class="">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Update Site News</h1>
                            </div>
                            {% for message in app.flashes('success') %}
                              <div class="alert alert-success">
                               {{ message }}
                               </div>
                            {% endfor %}
                            {{ form_start(form) }}
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_row(form.heading) }}  
                                      
                                    </div>
                                    <div class="col-sm-6">
                                         {{ form_row(form.date) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                   
                                        {{ form_row(form.content) }}
                                </div>
                                <a>
                                  <button type="submit" class="btn">{{form_row(form.submit)}}</button>
                                </a>
                             {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 {{ include('admin/footer.html.twig') }}
 {% endblock %}