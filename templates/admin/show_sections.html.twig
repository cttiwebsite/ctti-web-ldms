{% extends 'registration/base.html.twig' %}
{% block body %}
{{ include('admin/navigation.html.twig') }}
<div class="container">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Faculties</h6>
                        </div>
                         {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                            {% endfor %}
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>CODE</th>
                                            <th>NAME</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                      {% for section in sections %}
                                    <tbody>
                                        <tr>
                                            <td>{{section.getId}}</td>
                                            <td>{{section.getSectionCode}}</td>
                                            <td>{{section.getSectionName}}</td>
                                            <td width="100">
                                                <a title="Delete" href="/admin/delete_section/{{section.getId}}" class="btn btn-danger"></a>
                                                <a title="Edit" href="/admin/update_section/{{section.getId}}" class="btn btn-success"></a>
                                            </td>
                                        </tr>
                                    </tbody>
                                      {% else %}

                                     {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>              
{% include'admin/footer.html.twig' %}
{% endblock %}