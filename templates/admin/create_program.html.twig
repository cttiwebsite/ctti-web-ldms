{% extends 'registration/base.html.twig' %}
 {% block body %}
 {{ include('admin/navigation.html.twig') }}
 <div class="">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Add a Program</h1>
                            </div>
                            {{ form_start(programForm) }}
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_row(programForm.program_code) }}      
                                    </div>
                                    <div class="col-sm-6">
                                         {{ form_row(programForm.program_name) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                        {{ form_row(programForm.program_duration) }}
                                </div>
                                <div class="form-group"> 
                                        {{ form_row(programForm.program_certification) }}
                                </div>
                                  <div class="form-group">
                                        {{ form_row(programForm.program_type) }}
                                </div>
                                 <div class="form-group">
                                        {{ form_row(programForm.section) }}
                                </div>
                                 <div class="form-group">
                                        {{ form_row(programForm.description) }}
                                </div>
                                <a>
                                  <button type="submit" class="btn">{{form_row(programForm.submit)}}</button>
                                </a>
                             {{ form_end(programForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 {{ include('admin/footer.html.twig') }}
 {% endblock %}